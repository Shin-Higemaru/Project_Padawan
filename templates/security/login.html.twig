{% extends 'base.html.twig' %}

{% block title %}Identification !{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-6">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal">Déjà un Padawan es-tu ?</h1>
                    <h6>Identifie-toi</h6>
                    <label for="inputEmail" class="sr-only">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mt-2" placeholder="Email" required autofocus>
                    <label for="inputPassword" class="sr-only">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control mt-2" placeholder="Password" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

                    <button class="btn btn-lg btn-primary mt-2" type="submit">
                        Connecté tu seras
                    </button>
                </form>
            </div>
            <div class="col-6 text-center">
                <img class="img-fluid" width="70%" src="{{ asset('img/padawan.jpg') }}" alt="Padawan">
            <a href="#" class="btn btn-block btn-dark"> Un Padawan souhaitez-vous devenir ? <br> Un compte Créez</a>
            </div>
        </div>
    </div>
{% endblock %}
